# Stage 1: Dependencies
FROM node:22-alpine AS deps
RUN corepack enable && corepack prepare pnpm@latest --activate
WORKDIR /app

# Copy root workspace files
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./
COPY packages ./packages

# Copy api-server package.json
COPY backend/api-server/package.json ./backend/api-server/

# api-server, shared-nestjs, shared-types, shared-constants 의존성 설치
RUN pnpm install --frozen-lockfile \
    --filter @beastcamp/api-server... \
    --filter @beastcamp/shared-nestjs... \
    --filter @beastcamp/shared-types... \
    --filter @beastcamp/shared-constants...

# Stage 2: Builder
FROM node:22-alpine AS builder
RUN corepack enable && corepack prepare pnpm@latest --activate
WORKDIR /app

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/backend/api-server/node_modules ./backend/api-server/node_modules
COPY --from=deps /app/packages ./packages

# Copy source files
COPY backend/api-server ./backend/api-server
COPY pnpm-workspace.yaml package.json ./

# Build application
WORKDIR /app/backend/api-server
RUN pnpm --filter @beastcamp/shared-nestjs build && \
    pnpm --filter @beastcamp/shared-types build && \
    pnpm --filter @beastcamp/shared-constants build
RUN pnpm build

# Stage 3: Production
FROM node:22-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nestjs

# Copy built application and dependencies
COPY --from=builder --chown=nestjs:nodejs /app/backend/api-server/dist ./backend/api-server/dist
COPY --from=builder --chown=nestjs:nodejs /app/backend/api-server/public ./backend/api-server/public
COPY --from=builder --chown=nestjs:nodejs /app/backend/api-server/package.json ./backend/api-server/package.json
COPY --from=deps --chown=nestjs:nodejs /app/node_modules ./node_modules
COPY --from=deps --chown=nestjs:nodejs /app/backend/api-server/node_modules ./backend/api-server/node_modules
COPY --from=builder --chown=nestjs:nodejs /app/packages ./packages

USER nestjs

EXPOSE 3002

WORKDIR /app/backend/api-server
CMD ["node", "dist/backend/api-server/src/main.js"]

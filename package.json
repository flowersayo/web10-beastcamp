{
  "name": "@beastcamp/monorepo",
  "packageManager": "pnpm@10.28.1",
  "version": "1.0.0",
  "private": true,
  "description": "Beastcamp ticketing system monorepo",
  "scripts": {
    "prepare": "husky",
    "dev:api": "pnpm --filter @beastcamp/api-server start:dev",
    "dev:ticket": "pnpm --filter @beastcamp/ticket-server start:dev",
    "dev:queue": "pnpm infra:queue && pnpm --filter @beastcamp/queue-backend start:dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build:api": "pnpm --filter @beastcamp/api-server build",
    "build:ticket": "pnpm --filter @beastcamp/ticket-server build",
    "build:queue": "pnpm --filter @beastcamp/queue-backend build",
    "build:frontend": "pnpm --filter frontend build",
    "infra:queue": "pnpm --filter @beastcamp/queue-backend infra:up",
    "infra:queue:down": "pnpm --filter @beastcamp/queue-backend infra:down",
    "lint:api": "pnpm --filter @beastcamp/api-server lint",
    "lint:ticket": "pnpm --filter @beastcamp/ticket-server lint",
    "lint:queue": "pnpm --filter @beastcamp/queue-backend lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "backend/api-server/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter @beastcamp/api-server lint"
    ],
    "backend/ticket-server/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter @beastcamp/ticket-server lint"
    ],
    "queue-backend/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter @beastcamp/queue-backend lint"
    ],
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter @beastcamp/frontend lint"
    ]
  }
}
